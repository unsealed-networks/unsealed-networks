# Environment variables for unsealed-networks configuration
# Copy this file to .env and customize values as needed
# .env is gitignored and will not be committed

# Ollama LLM Configuration (default instance)
# Used for entity extraction and general LLM tasks
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b
OLLAMA_TIMEOUT=120

# Ollama Classifier Configuration (optional separate instance)
# Used specifically for document classification
# If not set, falls back to default OLLAMA_* values
OLLAMA_CLASSIFY_HOST=http://localhost:11434
OLLAMA_CLASSIFY_MODEL=qwen2.5:7b
OLLAMA_CLASSIFY_TIMEOUT=120

# Database Configuration
# DATABASE_PATH=/path/to/unsealed.db

# Logging
# LOG_LEVEL=INFO
